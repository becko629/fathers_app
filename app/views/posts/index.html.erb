<%= render "shared/header" %>

<div class='main'>
  <div class='title-contents'>
    <h2 class='service-title'>
      ～お父さんの集いの場～
    </h2>
    <p class='service-explain'>
      お父さん達のお父さんによる
    </p>
    <p class='service-explain'>
      出産準備、子育ての悩みや情報を共有する場
    </p>
  </div>

<%#コメント一覧%>
<div class='posts-contents'>
  <div class='posts-title'>
   <%= link_to '投稿一覧', "#", class: "posts-list" %>

   <% @posts.each do |post| %>
    <div class="post">
    <%= link_to post_path(post.id), class: "post-show" do %>
    <div class="post-date">
      <div class="date-time">
      <%= post.created_at.strftime('%Y/%m/%d %H:%M') %>
      </div>
      <div class="post-title">
        ■<%= post.title.truncate(20) %>
        <div class="post-category">
         <%= post.category.name %>
        </div>
      </div>
        <div class="post-text">
        <%= post.text.truncate(40) %>
        </div>
      </div>
      </div>
   <% end %>
   <% end %>

  </div>
</div>
<%= render "shared/footer" %>
