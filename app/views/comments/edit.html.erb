<%= render "shared/second-header" %>
  <div class="contents row">
  <div class="container">
    <h3>コメントを編集</h3>
    <%= form_with(model: [@post, @comment], local: true) do |form| %>
    <%= render 'shared/error_messages', model: form.object %>
      <%= form.text_area :comment_text, placeholder: "コメント", rows: "5" %>
      
      <%= form.submit "編集完了" %>
    <% end %>
      <%= link_to '削除', post_comment_path, method: :delete, class: "destroy-btn" %>

  </div>
</div>

<%= render "shared/footer" %>
