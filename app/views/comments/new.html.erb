<%= render "shared/second-header" %>

<div class="contents row">
  <div class="container">
    <h3>コメント</h3>
    <%= form_with(model: [@tweet, @comment], url:post_comments_path, local: true) do |form| %>
    <%= render 'shared/error_messages', model: form.object %>

      <%= form.text_area :comment_text, placeholder: "コメント内容", rows: "5" %>
      <%= form.submit "コメントする" %>
    <% end %>
  </div>
</div>

<%= render "shared/footer" %>